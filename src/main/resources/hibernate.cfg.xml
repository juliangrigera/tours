<hibernate-configuration xmlns="http://www.hibernate.org/xsd/orm/cfg">
    <session-factory>

        <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="connection.url">jdbc:mysql://localhost:3306/tours</property>
        <property name="connection.username">tours</property>
        <property name="connection.password">tours</property>

        <property name="dialect">org.hibernate.dialect.MySQL5InnoDBDialect</property>
        <property name="hibernate.hbm2ddl.auto">create</property>

        <property name="show_sql">true</property>

        <mapping class="edu.bbdd2.Usuario"></mapping>
        <mapping class="edu.bbdd2.Guia"></mapping>
        <mapping class="edu.bbdd2.Turista"></mapping>
        <mapping class="edu.bbdd2.Compra"></mapping>
        <mapping class="edu.bbdd2.Item"></mapping>

    </session-factory>
</hibernate-configuration>